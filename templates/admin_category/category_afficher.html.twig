{% extends 'base.html.twig' %}

{% block title %} {{parent()}} | Gestion des catégories{% endblock %}


{% block titreH1 %}Gestion des catégories{% endblock %}


{% block body %}

    <div class="col-md-10 mx-auto">


    {% for message in app.flashes('ajoutCategory') %}
        <div class="alert alert-success col-md-6 mx-auto text-center">
            {{message}}
        </div>
    {% endfor  %}

    {% for message in app.flashes('modifierCategory') %}
        <div class="alert alert-success col-md-6 mx-auto text-center">
            {{message}}
        </div>
    {% endfor  %}

    {% for message in app.flashes('suppCategory') %}
        <div class="alert alert-success col-md-6 mx-auto text-center">
            {{message}}
        </div>
    {% endfor  %}

    

        <div class="row justify-content-end">
            <a class="btn btn-success col-md-2 mb-3" href="{{ path('category_ajouter') }}">Ajouter une catégorie</a>
        </div>

        {% if categories is not empty %} {# si le tableau categories n'est pas vide #}

            
                <table class="table table-white table-striped table-hover text-center">

                    <thead class="bg-dark text-white">

                        <tr>
                            <th>ID Catégorie</th>
                            <th>Nom</th>
                            <th>Modifier</th>
                            <th>Supprimer</th>
                        </tr>
                    
                    </thead>


                    <tbody>

                        {% for categorie in categories %}

                            <tr>
                            
                                <td>{{ categorie.id }}</td>
                                <td>{{ categorie.nom }}</td>
                                


                                <td>
                                    <a href="{{ path('category_modifier' , {'id' : categorie.id } ) }}" >
                                        <img src="{{ asset('images/update.png') }}" alt="icône de modification">
                                    </a>
                                </td>



                                <td>
                                    <a href="{{ path('category_supprimer' , {'id' : categorie.id } ) }}" onclick="return confirm('confirmez-vous la suppression ?')">
                                        <img src="{{ asset('images/delete.png') }}" alt="icône de suppression">
                                    </a>
                                </td>
                            
                            </tr>

                        {% endfor %}
                    
                    </tbody>
                
                
                
                </table>
            

        {% else %} {# sinon le tableau categories est vide #}

            <h4 class="text-center mt-4 text-danger">Il n'y aucune catégorie pour le moment</h4>
            
        {% endif %}

    </div>



{% endblock %}
